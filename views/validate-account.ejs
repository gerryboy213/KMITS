<dmx-notifications id="notifies1"></dmx-notifications>
<div is="dmx-browser" id="browser1"></div>
<div class="container">
    <div class="row">
        <div class="col">
            <h1>Validate Your Account</h1>
        </div>
    </div>
    <div class="row">
        <div class="col">
            <p>You must now validate your account by adding the entering the code sent to your registered email address. Unconfirmed accounts will be removed after 24 hours</p>
        </div>
    </div>
    <div class="row">
        <div class="col">
            <form id="form1" is="dmx-serverconnect-form" method="post" action="/api/registration/validate_code" dmx-on:unauthorized="notifies1.warning('Unauthorized')" dmx-on:error="notifies1.danger('Error')" dmx-on:success="browser1.goto('/',true,'Home Page')">
                <div class="form-group mb-3 row">
                    <label for="inp_authcode" class="col-sm-2 col-form-label">Validation Code</label>
                    <div class="col-sm-10">
                        <input type="text" class="form-control" id="inp_authcode" name="authcode" aria-describedby="input1_help" placeholder="Enter Validation Code" required="">
                    </div>
                </div>
                <div class="form-group mb-3 row">
                    <label for="inp_email" class="col-sm-2 col-form-label">Registered email</label>
                    <div class="col-sm-10">
                        <input type="text" class="form-control" id="inp_email" name="email" aria-describedby="input1_help" placeholder="Enter Registered email address" required="" data-rule-email="">
                    </div>
                </div>
                <div class="form-group mb-3 row">
                    <div class="col-sm-2">&nbsp;</div>
                    <div class="col-sm-10">
                        <button id="btn1_submit" type="submit" class="btn btn-primary">Submit</button>
                        <button id="btn1_reset" type="reset" class="btn btn-secondary">Reset</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>
<meta name="ac:route" content="/validate-account">